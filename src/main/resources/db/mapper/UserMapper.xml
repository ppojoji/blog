<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserMapper">
	<select id="findUser" parameterType="Integer" resultType="naver.ppojoji.blog.dto.User">
		select 
			seq,
			id,
			pwd,
			email
		from tb_user
		where seq = #{id}	
	</select>
	<select id="login" parameterType="map" resultType="naver.ppojoji.blog.dto.User">
		select 
		 	seq,
		 	id,
		 	pwd,
		 	email
		 from tb_user
		 where id = #{id}
		 and pwd = #{pwd}	
	</select>
</mapper>